// logger.js
// Centralized logger based on pino, with pretty output and friendly, multi-line messages.

const pino = require('pino');

const baseLogger = pino({
  level: process.env.LOG_LEVEL || 'info',
  transport: {
    target: 'pino-pretty',
    options: {
      colorize: true,
      translateTime: 'SYS:standard',
      singleLine: false,
    },
  },
});

function formatBlock(levelLabel, message, meta) {
  const lines = [];

  const pino = require('pino');

  const pretty = pino.transport ? pino.transport({ target: 'pino-pretty', options: { colorize: true } }) : undefined;

  const logger = pino({ level: process.env.LOG_LEVEL || 'info' }, pretty);

  function formatBlock(title, obj) {
    return { title, ...obj };
  }

  module.exports = {
    info: (msg, obj = {}) => logger.info(formatBlock(msg, obj)),
    warn: (msg, obj = {}) => logger.warn(formatBlock(msg, obj)),
    error: (msg, obj = {}) => logger.error(formatBlock(msg, obj)),
    debug: (msg, obj = {}) => logger.debug(formatBlock(msg, obj)),
    auth: (msg, obj = {}) => logger.info(formatBlock(`[auth] ${msg}`, obj)),
    route: (msg, obj = {}) => logger.debug(formatBlock(`[route] ${msg}`, obj)),
    session: (msg, obj = {}) => logger.debug(formatBlock(`[session] ${msg}`, obj)),
  };
  },

  auth(message, meta) {
    const data = { area: 'auth', ...(meta || {}) };
    baseLogger.info({}, '\n' + formatBlock('AUTH', message, data));
  },

  route(message, meta) {
    const data = { area: 'route', ...(meta || {}) };
    baseLogger.info({}, '\n' + formatBlock('ROUTE', message, data));
  },

  session(message, meta) {
    const data = { area: 'session', ...(meta || {}) };
    baseLogger.debug({}, '\n' + formatBlock('SESSION', message, data));
  },
};

module.exports = logger;
